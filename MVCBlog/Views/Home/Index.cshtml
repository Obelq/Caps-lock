@{
    ViewBag.Title = "Home";
}
<link href="~/Content/advertisementsStyle.css" rel="stylesheet" type="text/css" />
@model List<WebsiteForAds.Models.Post>
    <h2 class="homePageTitle">Най-нови обяви</h2>
@foreach (var post in Model)
{
    <section class="row">
        <article class="advertismentHomePage">
            <h3 class="title">@post.Title</h3>
            <div class="about">
                Публикувано на <i>@post.Date</i>
                @if (post.Author != null)
                {
                    @:от <i>@post.Author.FullName (@post.Author.UserName)</i>
                }
            </div>
            <div class="body">
                <p>@post.Body</p>
            </div>

        </article>
    </section>
}

