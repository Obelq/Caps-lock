@model WebsiteForAds.Models.AllCommentsViewModel

<h2>Коментари</h2>
<div class="row">
    @if (Model.Comments.Any())
    {
        <table class="table" border="0">
            <tr>
                <th style="background-color:darkgreen;border-radius:7px;color:white;padding:2px;text-align:center">
                    Коментар:
                </th>
                <th style="background-color:darkgreen;border-radius:7px;color:white;padding:2px;text-align:center">
                    Добавен от:
                </th>
            </tr>

            @foreach (var item in Model.Comments)
            {
                <tr>
                    <td></td>
                    <td>
                        @item.Body
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="col-md-4 col-sm-6 col-xs-12">Няма обяви от ваше име.</div>
    }
</div>

