@model WebsiteForAds.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}
<link href="~/Content/advertisementsStyle.css" rel="stylesheet" type="text/css" />
<h2 class="title">Профил</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
  
    @Html.ActionLink("Моите обяви", "My")
    <hr />
       <dl class="dl-horizontal">
           <dt>Име и презиме:</dt>
           <dd>
                @Model.FullName
           </dd>
           <dt>Потребителско име:</dt>
           <dd>
                  @Model.Username
           </dd>

           <dt>Имейл:</dt>
           <dd>
               @Model.Email
           </dd>
        <dt>Парола:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смяна на паролата", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
        </dd>
    </dl>
</div>
